<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/cell">

    <RelativeLayout
        android:id="@+id/layout_date"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/lv_item_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/lv_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/lv_item_day"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/lv_item_img"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_date"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lv_item_img">
        <TextView
            android:id="@+id/lv_item_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/lv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/lv_item_store"/>

    </RelativeLayout>
    <!--<TextView-->
        <!--android:id="@+id/lv_item_orderid"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"/>-->

</RelativeLayout>
