<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorLightBlack</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:windowBackground">@color/colorLightGrey</item>
    </style>


    <style name="CustomizeEdit" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">@color/colorTransparent</item>
    </style>

    <style name="cell" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="thumbnail" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorGrey</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="card" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dividing_line" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="textViewPadding" parent="Theme.AppCompat.Light">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="animation_dialog_select_paytype" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_select_paytype_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_select_paytype_exit</item>
    </style>

</resources>
